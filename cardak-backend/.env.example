# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration (Using SQLite - no setup needed!)
# Database file will be created automatically at: database.sqlite

# JWT Configuration
JWT_SECRET=your_super_secret_key_change_in_production
JWT_EXPIRE=7d

# Firebase Configuration (Push Notifications)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_CLIENT_EMAIL=your_client_email

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Payment Gateway (Sanal POS)
PAYMENT_API_KEY=your_payment_api_key
PAYMENT_SECRET_KEY=your_payment_secret_key
PAYMENT_MERCHANT_ID=your_merchant_id

# Frontend URLs
MOBILE_APP_URL=cardak://
ADMIN_PANEL_URL=http://localhost:3000

# AI Configuration - LM Studio (Local AI)
LM_STUDIO_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=gemma-2b-it

# AI Configuration - Gemini AI (Cloud Fallback)
GEMINI_API_KEY=your_gemini_api_key_optional
